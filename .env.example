# CodegenCICD Dashboard Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=your-secure-postgres-password
DATABASE_URL=postgresql://postgres:your-secure-postgres-password@localhost:5432/codegencd

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ENCRYPTION_KEY=your-encryption-key-base64-encoded-32-bytes
ENCRYPTION_SALT=your-encryption-salt-change-in-production

# =============================================================================
# CODEGEN API CONFIGURATION
# =============================================================================
CODEGEN_ORG_ID=323
CODEGEN_API_TOKEN=sk-your-codegen-api-token-here

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================
GITHUB_TOKEN=github_pat_your-github-token-here

# =============================================================================
# GEMINI API (for deployment validation)
# =============================================================================
GEMINI_API_KEY=AIzaSy-your-gemini-api-key-here

# =============================================================================
# CLOUDFLARE CONFIGURATION (for webhooks)
# =============================================================================
CLOUDFLARE_API_KEY=your-cloudflare-api-key-here
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id-here
CLOUDFLARE_WORKER_NAME=webhook-gateway
CLOUDFLARE_WORKER_URL=https://your-worker.workers.dev

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Frontend URLs
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# MONITORING (Optional)
# =============================================================================
GRAFANA_PASSWORD=admin

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Uncomment and configure for production deployment

# SSL Configuration
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key

# Domain Configuration
# DOMAIN=your-domain.com
# CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# SQL Debug (shows all SQL queries in logs)
SQL_DEBUG=false

# Enable hot reload for development
HOT_RELOAD=true

# =============================================================================
# VALIDATION PIPELINE CONFIGURATION
# =============================================================================
# Maximum number of concurrent validation pipelines
MAX_CONCURRENT_VALIDATIONS=5

# Validation timeout (in seconds)
VALIDATION_TIMEOUT=1800

# Retry configuration
MAX_VALIDATION_RETRIES=3
RETRY_DELAY_SECONDS=30

# =============================================================================
# GRAINCHAIN CONFIGURATION
# =============================================================================
# Grainchain service configuration (if running separately)
# GRAINCHAIN_API_URL=http://localhost:8001
# GRAINCHAIN_API_KEY=your-grainchain-api-key

# =============================================================================
# WEB-EVAL-AGENT CONFIGURATION
# =============================================================================
# Web-eval-agent service configuration (if running separately)
# WEB_EVAL_API_URL=http://localhost:8002
# WEB_EVAL_API_KEY=your-web-eval-api-key

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker socket path (for grainchain integration)
DOCKER_SOCKET_PATH=/var/run/docker.sock

# Validation workspace directory
VALIDATION_WORKSPACE_DIR=/tmp/validation_workspaces

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
# Webhook secret for GitHub integration
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Webhook timeout (in seconds)
WEBHOOK_TIMEOUT=30
